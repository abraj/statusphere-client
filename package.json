{
  "name": "onelyid-app",
  "version": "0.0.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "tsc": "tsc --noEmit",
    "build": "tsup",
    "start": "node dist/index.js | pino-pretty",
    "deploy": "pnpm run build && pnpm run pm2:start",
    "pm2:start": "pm2 start dist/index.js --name onelyid-app --time",
    "pm2:stop": "pm2 stop onelyid-app && pm2 delete onelyid-app",
    "pm2:logs": "pm2 logs onelyid-app",
    "clean": "rimraf dist node_modules"
  },
  "type": "commonjs",
  "dependencies": {
    "@onelyid/express": "file:../onelyid/packages/express",
    "dotenv": "^17.2.3",
    "envalid": "^8.1.1",
    "express": "^4.17.2",
    "pino": "^10.1.0",
    "uhtml": "^4.7.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^25.0.3",
    "pino-pretty": "^13.1.3",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
